
@{
    ViewBag.Title = "Products Index";
}
<br />
<br />
<br />
<div class="container">
    <div class="row"></div>
    <div class="row">
        <div class="col-md-6">
            <select id="cmbCategory" class="form-control">
                <option value="1">a</option>
                <option value="2">a</option>
                <option value="3">b</option>
                <option value="4">a</option>
                <option value="5">c</option>
                <option value="6">a</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <table class="table table-responsive table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Product Name</th>
                        <th>Unit In Stock</th>
                        <th>Unit Price</th>
                        <th>Category ID</th>
                    </tr>
                </thead>
                <tbody id="resultbody"></tbody>
            </table>
        </div>
    </div>
</div>
@section scripts
{
    <script>
        $(function () {
            function init() {
                $.ajax({
                    url: "@Url.Action("GetAllCategories","Product")",
                    method: "get",
                    dataType: "json"
                }).done(function(e) {
                    if (e.success) {
                        $('#cmbCategory').empty();
                        $('#cmbCategory')
                            .append($("<option></option>")
                                .attr("value",0)
                                .text("Kategorisi Yok"));
                        $.each(e.data, function(key, value) {
                            $('#cmbCategory')
                                .append($("<option></option>")
                                    .attr("value",value.CategoryID)
                                    .text(value.CategoryName));
                        });
                    }
                });
            }

            $(function () {
               
                setInterval(init2, 10000);
                function init2() {
                    $("#cmbCategory").change(function () {
                        var id = $(this).val();

                        var deger = $("#cmbCategory option:selected").val();
                   
                    $.ajax({
                        url: "@Url.Action("GetAllProducts", "Product")",
                        method: "get",
                        dataType: "json",
                         data: { id:deger }
                    }).done(function (e) {
                        if (e.success) {
                            renderdata(e.data);
                            $("#resultdiv").show(600);
                        } else {
                            alert(e.message);
                        }
                            });
                    });
                }
       
                function renderdata(data) {
                $("#resultbody").empty();
                $.each(data,
                    function (key, value) {
                        var tr = document.createElement("tr");
                        var th = document.createElement("th");
                        th.innerText = key + 1;
                        var td = document.createElement("td");
                        td.innerText = value.ProductName;
                        var td2 = document.createElement("td");
                        td2.innerText = value.UnitsInStock;
                        var td3 = document.createElement("td");
                        td3.innerText = value.UnitPrice;
                        var td4 = document.createElement("td");
                        td4.innerText = value.CategoryID;
                        
                        $(tr).append(th).append(td).append(td2).append(td3).append(td4).appendTo($("#resultbody"));
                    });
            }


  
                init();
                init2();
            });
        });
    </script>
}
